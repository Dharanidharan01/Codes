describe('Cadbury Gifts Direct - Search Test', () => {
  it('Should navigate to Dairy Milk page and search for "slik"', () => {
    // Step 1: Visit the homepage
    cy.visit('https://www.cadburygiftsdirect.co.uk/')

    // Step 2: Scroll down and click "SHOP NOW"
    cy.contains('SHOP NOW').scrollIntoView().click()

    // Step 3: Wait for the new page to load
    cy.url().should('include', '/dairy-milk')

    // Step 4: Type "slik" into the search input field
    cy.get('input#search', { timeout: 10000 })
      .should('be.visible')
      .type('slik{enter}')

    // Step 5: Confirm search results page loads
    cy.url().should('include', 'search')
  })
})
