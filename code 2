describe('Cadbury Dairy Milk - Products Navigation Test', () => {
  it('Should visit the Dairy Milk page and click on Products', () => {
    // Step 1: Visit the Dairy Milk page
    cy.visit('https://www.cadbury.co.uk/products/brands/cadbury-dairy-milk/')

    // Step 2: Click on the "PRODUCTS" link using its class and text
    cy.get('a.event_internal_link[aria-label="PRODUCTS"]')
      .should('be.visible')
      .click()

    // Step 3: Confirm navigation to the Products page
    cy.url().should('include', '/products/')
  })
})
